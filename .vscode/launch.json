{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000

            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost",
            "webRoot": "${dashboard}"  // This is the path to the root of your project
        }
    ]
}